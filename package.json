{
  "name": "rud",
  "version": "1.0.0",
  "description": "CRUD Application",
  "author": "nnieddu",
  "private": true,
  "main": "build/electron.js",
  "homepage": "./",
  "config": {
    "forge": {
      "packagerConfig": {
				"name": "Crud",
				"asar": true,
				"icon": "build/icons/app",
        "ignore": [
          "^\\/public",
          "^\\/src",
          "^\\/node_modules/(?!electron-squirrel-startup)",
					"README.md"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
					"iconUrl": "build/icons/app/desktopIcon.ico",
					"setupIcon": "build/icons/app/desktopIcon.ico"
        }
      ]
    }
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "axios": "^1.2.1",
    "bootstrap": "^5.2.3",
    "caniuse-lite": "^1.0.30001439",
    "electron-squirrel-startup": "^1.0.0",
    "json-server": "^0.17.1",
    "react": "^18.2.0",
    "react-bootstrap": "^2.7.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-scripts": "^5.0.1",
    "redux": "^4.2.0",
    "redux-devtools-extension": "^2.13.9",
    "redux-thunk": "^2.4.2",
    "sass": "^1.56.2",
    "web-vitals": "^3.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "npm run sass && npm run prefix && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "sass": "sass ./src/styles/index.scss:./src/styles/index.css --style compressed",
    "prefix": "postcss ./src/styles/index.css --use autoprefixer -d ./src/styles/",
    "server": "json-server --w db.json --port 3003",
    "elec-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "elecstart": "electron-forge start",
    "package": "electron-forge package",
    "make": "npm run sass && npm run prefix && react-scripts build && electron-forge make",
    "noBuildmake": "electron-forge make"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.4",
    "@electron-forge/maker-deb": "^6.0.4",
    "@electron-forge/maker-rpm": "^6.0.4",
    "@electron-forge/maker-squirrel": "^6.0.4",
    "@electron-forge/maker-zip": "^6.0.4",
    "@electron-forge/plugin-webpack": "^6.0.4",
    "concurrently": "^7.6.0",
    "electron": "^22.0.0",
    "wait-on": "^6.0.1"
  }
}
